<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/inconsolata</item>
    </style>

    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.YellowButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/buttonYellow</item>
    </style>
    <style name="AppTheme.PinkButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/buttonPink</item>
    </style>
    <style name="AppTheme.GreenButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/buttonGreen</item>
    </style>
    <style name="AppTheme.RedButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/buttonRed</item>
    </style>

</resources>
